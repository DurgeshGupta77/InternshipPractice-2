{% extends 'base.html.twig' %}

{% block title %}Task Form!{% endblock %}



{% block body %}

    <style>
    .button1, .button2, .button3{
        border: 1px solid black;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        transition: all 0.5s;
    }

    .button1:hover{
        background-color: #4CAF50;
    }

    .button2:hover{
        background-color: #33EBFF;
    }

    .button3:hover{
        background-color: #C70039;
    }

    a{
        text-decoration: none;
        color: black;
    }
    </style>

    <div class = "container my-5">       

        <div class = "button text-center my-5">
            <button class = "button1"> <a href = {{path('try')}}>Display Created Tasks</a> </button>
            <button class = "button2"> <a href = {{path('innerjoin')}}>Display All Info</a> </button>
            <button class = "button3"> <a href = {{path('home')}}>Home Page</a> </button>
        </div>

        {% for message in app.flashes('taskSuccessNotice') %}
        
            <div class = "alert alert-success">
                {{ message }}
            </div>
            
        {% endfor %}

        {{ form(form) }}
    </div>
{% endblock %}
