{% block body %}
<link href="{{asset('CSS/register_page.css')}}" rel="stylesheet"/>

    <div class="container">
        <h1>Sign Up Page!</h1>
        <p>Please Fill up the details</p>
        <form method="POST">
            <label>User Name:</label><br>
            <input type="text" placeholder="Enter your Username"><br>
            <label>Email:</label><br>
            <input type="email" placeholder="Enter your Email"><br>            
            <label>Address:</label><br>
            <input type="text" placeholder="Enter your Address"><br>
            <label>Phone Number:</label><br>
            <input type="text" placeholder="Enter your Phone Number"><br>
            <label>Password:</label><br>
            <input type="text" placeholder="Enter your Password"><br>
            <label>Confirm Password:</label><br>
            <input type="text" placeholder="Confirm your Password"><br>
            <button>Register</button><br>
            <button>Login Page!</button>
        </form>
    </div>
{% endbody %}